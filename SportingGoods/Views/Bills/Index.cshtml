@model IEnumerable<SportingGoods.Models.Bill>

@{
    ViewData["Title"] = "Index";
}

<div class="page-title">
    <h3 class="breadcrumb-header">Bills</h3>
</div>

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-white">
                <div class="panel-heading">
                    <h4 class="panel-title">All bills</h4>
                </div>
                <div class="panel-body">
                    <a asp-action="Create" class="btn btn-success m-b-sm"><i class="icon-plus m-r-xs"></i>Add bill</a>

                    <div class="table-responsive">
                        <table id="example3" class="display table" style="width: 100%; cellspacing: 0;">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Client)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </th>
                                    <th>
                                        Number of items
                                    </th>
                                
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Client.FirstName) @Html.DisplayFor(modelItem => item.Client.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Items.Count)
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.ID" class="text-primary"><i class="menu-icon icon-eye"></i>&nbsp;Details</a> &nbsp;
                                            <a asp-action="Edit" asp-route-id="@item.ID" class="text-warning"><i class="menu-icon icon-pencil"></i>&nbsp;Edit</a> &nbsp;
                                            <a asp-action="Delete" asp-route-id="@item.ID" class="text-danger"><i class="menu-icon icon-delete"></i>&nbsp;Delete</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Client)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </th>
                                    <th>
                                        Number of items
                                    </th>

                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- Row -->
</div><!-- Main Wrapper -->