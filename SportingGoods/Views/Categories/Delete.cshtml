@model SportingGoods.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="page-title">
    <h3 class="breadcrumb-header">Delete category</h3>
</div>

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-white">
                <div class="panel-body">
                    <div class="panel-heading clearfix">
                        <h4 class="panel-title">Are you sure you want to delete this category?</h4>
                    </div>
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <td>@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                        </tbody>
                    </table>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> 
                    </form>
                </div>
            </div>
        </div>

    </div><!-- Row -->
</div><!-- Main Wrapper -->

<a class="btn btn-info" asp-action="Index"><i class="icon-arrow-left2 m-r-xs"></i>Return</a>